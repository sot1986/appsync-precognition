{
  "name": "@sot1986/appsync-precognition",
  "type": "module",
  "version": "0.0.3",
  "description": "JavaScript resolver validation utilities for AWS AppSync",
  "author": "sot1986",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sot1986/appsync-precognition.git"
  },
  "keywords": [
    "appsync",
    "validation",
    "resolver",
    "aws",
    "precognition"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsdown --format esm --config tsdown.config.ts",
    "bundle": "cd playground && ./bundle-resolvers.sh && cd .. && eslint --ext playground/resolvers/**/*.{ts,js} . --fix",
    "test": "vitest",
    "lint:resolvers": "eslint --ext playground/resolvers/**/*.{ts,js} . --fix"
  },
  "peerDependencies": {
    "@aws-appsync/utils": "^2.0.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.7.3",
    "@aws-appsync/eslint-plugin": "^2.0.2",
    "@types/node": "^25.0.3",
    "@typescript-eslint/parser": "^8.50.1",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "tsdown": "^0.18.3",
    "tsx": "^4.21.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.50.1",
    "vitest": "^4.0.16"
  }
}
